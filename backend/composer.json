{
    "name": "hortas-comunitarias/backend",
    "description": "API Backend para Sistema de Hortas Comunitárias",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Equipe Hortas Comunitárias",
            "email": "contato@hortas.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "respect/validation": "^2.2",
        "illuminate/database": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse src"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
